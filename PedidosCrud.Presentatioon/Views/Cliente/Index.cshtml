@model PedidosCrud.Application.Dto.ClienteCreateDto 

<form asp-controller="Cliente" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="@Model.Nome"></label>
        <input asp-for="@Model.Nome" placeholder="Ex: Caio" class="form-control" />
        <span asp-validation-for="@Model.Nome"></span>
    </div>

    <div class="row justify-content-center">
        <button type="submit" class="btn btn-success"> Adicionar Cliente </button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }