@model IEnumerable<PedidosCrud.Application.Dto.ProdutoDto>

<p>
    <a asp-action="CreatePedido" class="btn btn-outline-info">Criar pedido</a>
    <a asp-action="CreateProduto" class="btn btn-outline-info">Adicionar produto</a>
    <a asp-action="CreateCliente" class="btn btn-outline-info">adicionar cliente</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                Options
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    R$ @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
            </tr>
        }
    </tbody>
</table>
